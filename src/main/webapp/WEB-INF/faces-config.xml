<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
  <application>

    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
      <supported-locale>ru</supported-locale>
    </locale-config>

  </application>

  <managed-bean>
    <managed-bean-name>banksList</managed-bean-name>
    <managed-bean-class>com.openfaces.table.test.BanksList</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <factory>
    <exception-handler-factory>com.config.AppExceptionHandlerFactory</exception-handler-factory>
  </factory>
</faces-config>